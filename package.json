{
  "name": "storyteller",
  "version": "1.0.0",
  "description": "Narrimo: premium narrated story studio with multi-genre generation, interactive branching, and real-time co-writing",
  "type": "module",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "node --watch server/index.js",
    "build": "cd client && npm run build",
    "db:migrate": "node database/migrate.js",
    "db:seed": "node database/seed.js",
    "db:reset": "node database/reset.js",
    "test": "node --test server/**/*.test.js",
    "client:dev": "cd client && npm run dev",
    "client:build": "cd client && npm run build",
    "install:all": "npm install && cd client && npm install"
  },
  "keywords": [
    "storytelling",
    "ai",
    "narration",
    "audio",
    "interactive",
    "co-writing",
    "tts",
    "elevenlabs",
    "openai",
    "voice"
  ],
  "author": "AY-I-T",
  "license": "MIT",
  "dependencies": {
    "@3d-dice/dice-box": "^1.1.4",
    "@fal-ai/client": "^1.7.2",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "google-auth-library": "^10.5.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "openai": "^4.20.0",
    "pdf-parse": "^2.4.5",
    "pg": "^8.11.3",
    "sanitize-html": "^2.17.0",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "nodemon": "^3.0.2",
    "playwright": "^1.57.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
