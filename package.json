{
  "name": "storyteller",
  "version": "1.0.0",
  "description": "Mobile-first bedtime storytelling app with multi-agent AI story generation",
  "type": "module",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "node --watch server/index.js",
    "build": "cd client && npm run build && xcopy /E /Y dist\\* ..\\public\\",
    "db:migrate": "node database/migrate.js",
    "db:seed": "node database/seed.js",
    "db:reset": "node database/reset.js",
    "test": "node --test server/**/*.test.js",
    "client:dev": "cd client && npm run dev",
    "client:build": "cd client && npm run build",
    "install:all": "npm install && cd client && npm install"
  },
  "keywords": [
    "storytelling",
    "ai",
    "bedtime",
    "tts",
    "elevenlabs",
    "openai",
    "voice"
  ],
  "author": "AY-I-T",
  "license": "MIT",
  "dependencies": {
    "@fal-ai/client": "^1.7.2",
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "google-auth-library": "^10.5.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.3",
    "openai": "^4.20.0",
    "pg": "^8.11.3",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
