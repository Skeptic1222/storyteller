<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    <webSocket enabled="true" />

    <!-- CRITICAL FIX: Disable IIS output caching that was overriding Node.js cache-control headers -->
    <caching enabled="false" enableKernelCache="false" />

    <!-- SECURITY HEADERS -->
    <httpProtocol>
      <customHeaders>
        <!-- Remove any inherited headers first to prevent duplicates -->
        <remove name="X-Content-Type-Options" />
        <remove name="X-Frame-Options" />
        <remove name="X-XSS-Protection" />
        <remove name="Referrer-Policy" />
        <remove name="Permissions-Policy" />
        <remove name="X-Powered-By" />
        <!-- Then add our headers -->
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="SAMEORIGIN" />
        <add name="X-XSS-Protection" value="1; mode=block" />
        <add name="Referrer-Policy" value="strict-origin-when-cross-origin" />
        <add name="Permissions-Policy" value="geolocation=(), microphone=(self), camera=()" />
      </customHeaders>
    </httpProtocol>

    <rewrite>
      <rules>
        <!-- Redirect HTTP to HTTPS for non-localhost requests (Google Sign-In requires HTTPS) -->
        <rule name="HTTP to HTTPS" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTPS}" pattern="^OFF$" />
            <add input="{HTTP_HOST}" pattern="^localhost$" negate="true" />
            <add input="{HTTP_HOST}" pattern="^127\.0\.0\.1$" negate="true" />
          </conditions>
          <action type="Redirect" url="https://{HTTP_HOST}{REQUEST_URI}" redirectType="Found" />
        </rule>
        <!-- Socket.IO WebSocket and polling (both /socket.io and /storyteller/socket.io) -->
        <rule name="SocketIO" stopProcessing="true">
          <match url="^socket\.io/(.*)" />
          <action type="Rewrite" url="http://127.0.0.1:5100/socket.io/{R:1}" />
        </rule>
        <rule name="SocketIOPrefixed" stopProcessing="true">
          <match url="^storyteller/socket\.io/(.*)" />
          <action type="Rewrite" url="http://127.0.0.1:5100/socket.io/{R:1}" />
        </rule>
        <!-- API and static content -->
        <rule name="ProxyToNode" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{CACHE_URL}" pattern="^(.+)://" />
          </conditions>
          <action type="Rewrite" url="http://127.0.0.1:5100/{R:1}" />
        </rule>
      </rules>
    </rewrite>
    <staticContent>
      <remove fileExtension=".webmanifest" />
      <mimeMap fileExtension=".webmanifest" mimeType="application/manifest+json" />
    </staticContent>
  </system.webServer>
</configuration>
